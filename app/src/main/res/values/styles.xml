<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gold</item>
        <item name="colorPrimaryDark">@color/blueGrey</item>
        <item name="colorAccent">@color/gold</item>
        <item name="android:statusBarColor">#DFDFDF</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:buttonCornerRadius" tools:targetApi="p">100dp</item>
        <item name="android:layoutDirection">ltr</item> // remove when deploying to more then one language


        <item name="android:ambientShadowAlpha">0.075</item>
        <item name="android:spotShadowAlpha">0.075</item>

    </style>
</resources>
