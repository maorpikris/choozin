<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" app:cardCornerRadius="42dp"
            android:elevation="20dp" app:cardElevation="42dp" android:padding="14dp"
            app:cardBackgroundColor="@color/cardview_light_background" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp" app:srcCompat="@drawable/p1" android:id="@+id/post_profile_image"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop"/>

            <TextView
                    android:text="Zhin Lin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:id="@+id/post_username"
                android:textSize="14sp"

                    app:layout_constraintStart_toEndOf="@+id/post_profile_image" android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/post_profile_image"/>
            <TextView
                    android:text="Brazilian jiu jitsu master."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:id="@+id/post_desc"
                app:layout_constraintStart_toStartOf="@+id/post_username"
                app:layout_constraintTop_toBottomOf="@+id/post_username"
                    android:textSize="12sp"
                    android:textColor="@android:color/darker_gray" />
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="275dp" app:srcCompat="@drawable/p2"
                android:id="@+id/post_limage"
                    app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/postTitle"
                app:layout_constraintEnd_toStartOf="@+id/post_rimage"
                app:layout_constraintHorizontal_bias="0.5"
                    android:scaleType="centerCrop" app:layout_constraintTop_toBottomOf="@+id/post_profile_image"
                    android:layout_marginTop="16dp"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp" app:srcCompat="@drawable/p3"
                android:id="@+id/post_rimage"
                    app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="3dp"
                android:scaleType="centerCrop"
                    app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintBottom_toBottomOf="@+id/post_limage"
                app:layout_constraintStart_toEndOf="@+id/post_limage"
                app:layout_constraintTop_toTopOf="@+id/post_limage" />
            <TextView
                    android:text="x min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/post_rimage"
                app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:textColor="@color/cardview_shadow_start_color"
                    android:textSize="12sp"/>
            <TextView
                    android:text="Basketball or Football?"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                android:id="@+id/postTitle"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:textAlignment="center" android:textSize="24sp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/post_fav"

                    app:autoSizeTextType="uniform" android:maxLines="2"
                    app:autoSizeMaxTextSize="22sp" android:gravity="center_vertical"/>
            <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp" app:srcCompat="@drawable/ic_star_border_black_24dp"
                android:id="@+id/post_fav"
                app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:scaleType="fitXY"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>