<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".infra.RegisterActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:ems="10"
            android:id="@+id/emailField"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:background="@drawable/edit_text_round"
            android:inputType="textEmailAddress" android:hint="Email Address"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:paddingStart="14dp" android:paddingEnd="14dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:drawablePadding="14dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:ems="10"
            android:id="@+id/passwordField"
            android:background="@drawable/edit_text_round"
            android:inputType="textPassword" android:hint="Password"
            android:drawableLeft="@drawable/ic_lock_black_24dp" android:drawablePadding="14dp"
            android:paddingStart="14dp" android:paddingEnd="14dp"
            app:layout_constraintEnd_toEndOf="@+id/emailField" app:layout_constraintStart_toStartOf="@+id/emailField"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/emailField"/>
    <Button
            android:text="BACK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:textColor="@color/blueGrey"
            android:onClick="backButtonClicked"/>
    <Button
            android:text="Lets Go"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:id="@+id/button4"
            android:background="@drawable/gradient_button"
            android:textColor="@color/white"
            android:padding="16dp"
            android:layout_marginStart="256dp" app:layout_constraintStart_toStartOf="parent"
            android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/passwordField"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/passwordField"
            android:elevation="0dp" android:onClick="registerButtonClicked"/>
    <TextView
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textColor="@android:color/darker_gray"
            android:textSize="42sp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/button3" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/emailField"/>
</androidx.constraintlayout.widget.ConstraintLayout>